<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/image_owner_avatar"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginLeft="16dp"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/text_owner_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toTopOf="@+id/text_project_name"
      app:layout_constraintLeft_toRightOf="@+id/image_owner_avatar"
      app:layout_constraintTop_toTopOf="@+id/image_owner_avatar"
      app:layout_constraintVertical_chainStyle="spread"
      tools:text="Repo owner" />

  <TextView
      android:id="@+id/text_project_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/image_owner_avatar"
      app:layout_constraintLeft_toRightOf="@+id/image_owner_avatar"
      app:layout_constraintTop_toBottomOf="@+id/text_owner_name"
      tools:text="Repo name" />

  <ImageView
      android:id="@+id/image_bookmarked"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginRight="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>